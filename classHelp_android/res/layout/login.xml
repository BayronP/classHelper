<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/text_psd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="110dp"
        android:text="密码:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_psd"
        android:layout_alignParentTop="true"
        android:layout_marginTop="49dp"
        android:text="用户名:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edit_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_user"
        android:layout_alignBottom="@+id/text_user"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/text_user"
        android:ems="10"
        android:hint="请输入用户名" />

    <EditText
        android:id="@+id/edit_psd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_psd"
        android:layout_alignBottom="@+id/text_psd"
        android:layout_alignLeft="@+id/edit_user"
        android:hint="请输入密码"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_psd"
        android:layout_below="@+id/edit_psd"
        android:layout_marginTop="18dp"
        android:text="是否记住密码" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/checkBox1"
        android:layout_marginLeft="160dp"
        android:background="@drawable/btn_login1" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBox1"
        android:layout_alignBottom="@+id/checkBox1"
        android:layout_toRightOf="@+id/btn_login"
        android:text="自动登陆" />

</RelativeLayout>
